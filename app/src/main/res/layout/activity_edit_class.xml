<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activities.AddClassActivity"
        android:orientation="vertical">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
    >

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:focusableInTouchMode="true">

            <TextView
                    android:id="@+id/tvDay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Name of the Class"
                    android:textSize="24sp"
                    android:textAlignment="center"
                    android:layout_marginTop="50dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:textColor="@color/colorTextPrimary"
                    android:fontFamily="@font/avenir_light"/>
            <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/name"
                    android:textSize="16sp"
                    android:layout_marginTop="50dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:textColor="@color/colorTextHint"
                    android:fontFamily="@font/avenir_book"/>
            <EditText
                    android:id="@+id/etNameStudent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:textSize="24sp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:textColor="@color/colorTextPrimary"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/avenir_book"/>
            <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="380dp"
                    android:layout_height="1dp"
                    android:background="@drawable/ic_underline"/>
            <TextView
                    android:id="@+id/textView1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/colorTextHint"
                    android:text="@string/teacher"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:fontFamily="@font/avenir_book"/>
            <EditText
                    android:id="@+id/etTeacher"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:textSize="24sp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:textColor="@color/colorTextPrimary"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/avenir_book"/>
            <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="380dp"
                    android:layout_height="1dp"
                    android:background="@drawable/ic_underline"/>
            <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/colorTextHint"
                    android:text="@string/lesson"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:fontFamily="@font/avenir_book"/>
            <EditText
                    android:id="@+id/etLesson"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:textSize="24sp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:textColor="@color/colorTextPrimary"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/avenir_book"/>
            <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="380dp"
                    android:layout_height="1dp"
                    android:background="@drawable/ic_underline"/>
            <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="16dp"
                    android:textSize="16sp"
                    android:textColor="@color/colorTextHint"
                    android:text="@string/schedule"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:fontFamily="@font/avenir_book"/>
            <EditText
                    android:id="@+id/etSchedule"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:textSize="24sp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:background="@android:color/transparent"
                    android:textColor="@color/colorTextPrimary"
                    android:fontFamily="@font/avenir_book"/>
            <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="380dp"
                    android:layout_height="1dp"
                    android:background="@drawable/ic_underline"/>
            <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/colorTextHint"
                    android:text="@string/comment"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:fontFamily="@font/avenir_book"/>
            <MultiAutoCompleteTextView
                    android:id="@+id/mtvComent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1000"
                    android:ems="10"
                    android:textSize="24sp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:textColor="@color/colorTextPrimary"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/avenir_book"/>
            <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="380dp"
                    android:layout_height="1dp"
                    android:background="@drawable/ic_underline"/>
            <Button
                    android:id="@+id/btnSave"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/colorTextTitle"
                    android:text="@string/save"
                    android:layout_marginTop="50dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:background="@color/colorMJR"
                    android:fontFamily="@font/avenir_book"/>
            <Button
                    android:id="@+id/btnCancel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/colorTextTitle"
                    android:text="@string/cancel"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:layout_marginBottom="50dp"
                    android:background="@color/colorBtnCancel"
                    android:fontFamily="@font/avenir_book"/>

        </LinearLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>